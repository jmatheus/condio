<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2><%= t '.new_product' %></h2>
    <ol class="breadcrumb">
      <li>
        Manutenção Preventiva
      </li>
      <li class="active">
      <strong><%= t '.new_product' %></strong>
      </li>
    </ol>
  </div>
</div>

<div style="margin-top: 25px"/>


<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t 'activerecord.models.product.one' %></h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <% if @product.errors.any? %>
          <div class="alert alert-danger">
              <h4 id="notice">
                  <%= t 'errors' %>:
              </h4>
              <ul>
                <% @product.errors.full_messages.each do |message| %>
                  <li><small><%=message%></small></li>
                <% end %>
              </ul>
          </div>
        <% end %>
        <%= form_for @product do |f| %>
          <div class="row">
    				<div class="fieldcontain form-group col-md-8  form-crud">
    					<label for="title" class="col-sm-2 control-label">
    						<%= t 'activerecord.attributes.product.name' %>:
    					</label>
    					<div class="col-sm-8">
                <%= f.text_field :name, required: true, autofocus: true, class: 'form-control' %>
    					</div>
    				</div>
    			</div>
          <div class="row">
    				<div class="fieldcontain form-group col-md-8  form-crud">
    					<label for="title" class="col-sm-2 control-label">
    						<%= t 'activerecord.attributes.product.description' %>:
    					</label>
    					<div class="col-sm-8">
                <%= f.text_field :maintenance_date, autofocus: true, class: 'form-control' %>
    					</div>
    				</div>
    			</div>
          <div class="row">
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary block m-b">	<%= t 'buttons.save' %></button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
