<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Produtos</h2>
    <ol class="breadcrumb">
      <li>
        <a href="#">Manutenção Preventiva</a>
      </li>
      <li class="active">
        <strong><%= t 'activerecord.models.produtos' %></strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <%= link_to t('buttons.nova_manutenção'), new_product_path, :class => "button btn btn-primary" %>
    </div>
  </div>
</div>

<div style="margin-top: 25px"/>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Manutenção Ativas</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-hover" id="categories">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Data da Reserva</th>
              <th>Local</th>
              <th>
                Criado Em
              </th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.maintenance_date.strftime("%d/%m/%y") %></td>
                <td><%= product.building_location.try(:name) %></td>
                <td><%= product.created_at.strftime("%d/%m/%y %H:%M:%S") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
