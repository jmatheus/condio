<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Nova Manutenção</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <% if @product.errors.any? %>
          <div class="alert alert-danger">
              <h4 id="notice">
                  <%= t 'errors' %>:
              </h4>
              <ul>
                <% @product.errors.full_messages.each do |message| %>
                  <li><small><%=message%></small></li>
                <% end %>
              </ul>
          </div>
        <% end %>
        <%= form_for @product do |f| %>
          <div class="row">
            <div class="fieldcontain form-group col-md-8  form-crud">
              <label for="account_id" class="col-sm-2 control-label">
                Foto:
              </label>
              <div class="col-sm-8">
                <input type="file" name="name" value="" class="form-control">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="fieldcontain form-group col-md-8  form-crud">
              <label for="account_id" class="col-sm-2 control-label">
                Local:
              </label>
              <div class="col-sm-8">
                <%= f.select :building_location_id, BuildingLocation.all.pluck(:name, :id),{include_blank: t('buttons.select') }, {:autofocus => true, :class => 'form-control'} %>
              </div>
            </div>
          </div>
          <div class="row">
    				<div class="fieldcontain form-group col-md-8  form-crud">
    					<label for="title" class="col-sm-2 control-label">
    						Nome:
    					</label>
    					<div class="col-sm-8">
                <%= f.text_field :name, required: true, autofocus: true, class: 'form-control' %>
    					</div>
    				</div>
    			</div>
          <div class="row">
            <div class="fieldcontain form-group col-md-8  form-crud">
              <label for="title" class="col-sm-2 control-label">
                Data da Manutenção:
              </label>
              <div class="col-sm-8">
                <%= f.text_field :maintenance_date, id: "maintenance_date", autofocus: true, class: 'form-control datepicker' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary block m-b">	<%= t 'buttons.save' %></button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(function() {
  $('.datepicker').datepicker();
});
</script>
